// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dynamicFvMesh       dynamicMotionSolverFvMesh;

motionSolverLibs    ("lib6DoFDynamicMeshForcedMotion.so");

motionSolver        forcedRigidBodyMotion;

forcedRigidBodyMotionCoeffs
{
        patches         (floater);
		innerDistance   0.1;
        outerDistance   0.4;

        initialCoR    (0 0 0); 
        initialAngle			(0 0 0);
        motionFromFile         true;
        FileDisplacementDoF      3;
	    translationalAmplitude		(0 0 0);
	    translationalFrequency		(0 0 0);
	    rotationalAmplitude		(0 0.2 0);
	    rotationalFrequency		(0 1 0);
}



